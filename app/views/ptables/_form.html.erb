<% form_for @ptable do |f| %>
  <%= f.error_messages %>
  <p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :layout %><br />
  <%= f.text_area :layout, :size => "80x20" %>
  </p>
  <p>
  <% field_set_tag("Valid operating systems") do %>
    <%= authorized_edit_habtm @ptable, Operatingsystem %>
  <% end %>
  </p>
  <br/>
  <p><%= f.submit "Submit" %></p>
<% end %>
