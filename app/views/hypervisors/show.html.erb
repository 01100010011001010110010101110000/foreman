<% fields = %w{cores cpus memory mhz model nodes sockets threads} -%>
<table class=list>
  <tr>
    <% fields.each do |key| %>
      <th><%= key.titleize %></th>
    <% end -%>
    <th>Available memory</th>
    <th></th>
  </tr>
  <tr>
    <% fields.each do |key| %>
      <td><%= @host.connection.node_get_info.send(key.to_sym) %></td>
    <% end -%>
    <td> <%= number_to_human_size @host.connection.node_free_memory rescue "N/A"%></td>
    <td>
      <%= link_to "Guests", hypervisor_guests_path(@hypervisor) %>
    </td>
  </tr>
</table>
