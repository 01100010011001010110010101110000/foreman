<% title "Operating systems" %>

<table class="list">
  <tr>
    <th>Name</th>
    <th>Family</th>
    <th></th>
  </tr>
  <% for operatingsystem in @operatingsystems %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to_if_authorized h(operatingsystem.to_label), hash_for_edit_operatingsystem_path(:id => operatingsystem.id) %></td>
      <td><%= h operatingsystem.family %></td>
      <td align="right">
        <%= display_link_if_authorized "Destroy", hash_for_operatingsystem_path(:id => operatingsystem, :auth_action => :destroy), :confirm => "Delete #{operatingsystem.fullname}?", :action => :destroy %>
      </td>
    </tr>
  <% end %>
</table>

<%= page_entries_info @operatingsystems, :entry_name => "operating system" %>
<%= will_paginate @operatingsystems %>

<p><%= display_link_if_authorized "New Operatingsystem", hash_for_new_operatingsystem_path %></p>
