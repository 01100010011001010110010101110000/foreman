<% for association in associations -%>
  <%= check_box_tag(
    "#{klass.class.to_s.downcase}[#{association.class.to_s.downcase.singularize}_ids][]",
      association.id, klass.send(association.class.table_name).include?(association))
    %>
  <%= association %>
  <%= hidden_field_tag "#{klass.class.to_s.downcase}[#{association.class.to_s.downcase.singularize}_ids][]" %>
<% end -%>
