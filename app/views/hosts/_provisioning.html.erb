<% templates.sort{|t,x| t.template_kind <=> x.template_kind}.each do |tmplt| -%>
  <div class="span-12 last">
    <span class="span-5"> <%= tmplt.template_kind %> Template </span>
    <span class="span-5"> <%= link_to_if_authorized h(tmplt), hash_for_edit_config_template_path(:id => tmplt.to_param) %></span>
  </div>
<% end -%>
