<% form_for @hostgroup do |f| %>
  <%= f.error_messages %>
  <p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  </p>


  <%= render 'puppetclasses/class_selection', :obj => @hostgroup %>

  <%= render :partial => "common_parameters/parameters", :locals => { :f => f, :type => :group_parameters } %>

  <p><%= f.submit "Submit" %></p>
<% end %>
